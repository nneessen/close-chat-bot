# Railway Environment Variables Example
# Set these in your Railway dashboard, NOT in a committed .env file

# Database (Railway provides this automatically)
DATABASE_URL=postgresql://postgres:password@host:5432/railway

# Redis (Railway provides this if you add a Redis service)
REDIS_URL=redis://host:port

# Close.io Configuration
CLOSE_API_KEY=your_close_api_key
CLOSE_WEBHOOK_SECRET=your_webhook_secret
CLOSE_ORGANIZATION_ID=your_org_id

# Calendly Configuration  
CALENDLY_API_TOKEN=your_calendly_token
CALENDLY_WEBHOOK_SECRET=your_calendly_secret
CALENDLY_USER_URI=https://calendly.com/your-username/event
CALENDLY_ORGANIZATION_URI=https://calendly.com/your-username/event

# LLM Configuration
ANTHROPIC_API_KEY=your_anthropic_key
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-20250514

# Application URLs (set these to your Railway deployment URL)
NEXT_PUBLIC_APP_URL=https://your-app-name.railway.app
WEBHOOK_ENDPOINT_URL=https://your-app-name.railway.app/api/webhooks

# Security (generate strong random values)
JWT_SECRET=your_32_character_jwt_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Feature Flags
ENABLE_APPOINTMENT_BOT=true
ENABLE_OBJECTION_BOT=true
ENABLE_DEBUG_MODE=true

# Rate Limiting
MAX_MESSAGES_PER_CONVERSATION=50
MAX_CONVERSATIONS_PER_DAY=100
MESSAGE_COOLDOWN_SECONDS=2